{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementação do tabnews.com.br  para praticas do curso.dev",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "postdev": "npm run services:down",
    "test": "npm run services:up  && concurrently -n next,jest  --hide next -k -s command-jest \"next dev\" \"NODE_OPTIONS='--experimental-vm-modules' jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watchAll --runInBand --verbose --silent=false",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "commitizen": "4.3.1",
    "dotenv": "17.2.0",
    "dotenv-expand": "12.0.2",
    "next": "15.3.5",
    "next-connect": "^1.0.0",
    "node-pg-migrate": "8.0.3",
    "pg": "8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "swr": "^2.3.4",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "concurrently": "9.2.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.30.1",
    "eslint-config-next": "15.3.5",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-jest": "29.0.1",
    "husky": "9.1.7",
    "jest": "30.0.4",
    "prettier": "3.6.2",
    "source-map": "0.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
